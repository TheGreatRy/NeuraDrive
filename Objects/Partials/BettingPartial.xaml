<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NeuraDrive.Objects.Partials.RacingPartial">
    
    <!--Betting Partial
        Display car information
        Form for betting on cars(form should async and update users amount immediately)
        CHECK TO SEE IF USER CAN PAY!!!!!!
        Note: this will be used for every car generated-->
    
    <ContentView.Content>

        <StackLayout Padding="10">


            <Label Text="Name" FontAttributes="Bold" />


            <Label Text="First name" />

            <Entry x:Name="FirstName" Placeholder="First name" />


            <Label Text="Last name" />

            <Entry x:Name="LastName" Placeholder="Last name" />


            <Entry
                x:Name="betAmountEntry"
                Placeholder="Betting Amount: "
                Keyboard="Numeric"/>

            <Button
                x:Name="PlaceBetButton"
                Text="Place Bet"
                Clicked="OnBetClicked"/>

        </StackLayout>

    </ContentView.Content>
</ContentView>

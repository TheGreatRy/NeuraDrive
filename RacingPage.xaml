<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local ="clr-namespace:NeuraDrive.Objects.Partials"
             x:Class="NeuraDrive.RacingPage"
             Loaded="ContentPage_Loaded"
             Title="RacingPage">



    <ScrollView Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
        <VerticalStackLayout Padding="12" Spacing="10">

            <Label
            HorizontalTextAlignment="Center"
            x:Name="loadingCars"
            Text=""/>

            <Label
            x:Name="moneyText"
            Text=""/>

            <Entry
            x:Name="numCarsEntry"
            Placeholder="Enter number of cars"
            Keyboard="Numeric"/>

            <Button
            x:Name="NewRaceButton"
            Text="Generate New Race"
            Clicked="OnGenerateRaceClicked"/>

            <VerticalStackLayout x:Name="RacersStack"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local ="clr-namespace:NeuraDrive.Objects.Partials"
             x:Class="NeuraDrive.RacingPage"
             Loaded="ContentPage_Loaded"
             Title="RacingPage">


    <VerticalStackLayout>
        
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label
            x:Name="moneyText"
            Text=""/>


        <Entry
            x:Name="numCarsEntry"
            Placeholder="Enter number of cars"
            Keyboard="Numeric"/>

        <Button
            x:Name="NewRaceButton"
            Text="Generate New Race"
            Clicked="OnGenerateRaceClicked"/>

        
            <VerticalStackLayout x:Name="RacersStack">

            </VerticalStackLayout>
        
       
 
    </VerticalStackLayout>
    
    
</ContentPage>
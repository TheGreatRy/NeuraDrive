<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NeuraDrive.MainPage">

    <!-- Only one child element is allowed directly under ContentPage, so wrap everything in a single layout -->
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label 
                Text="NeuroDrive Project (do not remove any of the below Entrys or Buttons)."
                Style="{StaticResource SubHeadline}"/>

            <Label 
                Text="Introducing NeuroDrive, the ultimate Formula 1 betting companion for fans who live for the thrill of the race.
                With a sleek interface and real-time race data, NeuroDrive lets you place smart, strategic bets on your favorite drivers, teams, and race outcomes — all in one place.
                Track live standings, compare driver stats, and analyze trends to make every prediction count. 
                Whether you’re a casual viewer or a dedicated F1 strategist, NeuroDrive turns every Grand Prix into a high-octane experience where your knowledge meets opportunity.
                Get ready to race, bet, and win like a pro"/>

            <Frame x:Name="RaceSetUp">
                <VerticalStackLayout>
                    <Label 
                        Text="Race Set Up"/>

                    <Entry
                        x:Name="numCarsEntry"
                        Placeholder="Enter number of cars"
                        Keyboard="Numeric"/>

                    <Button
                        x:Name="NewRaceButton"
                        Text="Generate New Race"
                        Clicked="OnGenerateRaceClicked"/>
                </VerticalStackLayout>

            </Frame>

            <Frame>
                <VerticalStackLayout>
                    <Button
                        x:Name="StartRaceButton"
                        Text="Start Race"
                        Clicked="OnStartRaceClicked"/>
    
                    <Button
                        x:Name="PlaceBet"
                        Text="Place Bet"
                        Clicked="OnPlaceBetClicked"/>
                    <Button
                        x:Name="ViewWeather"
                        Text="View the weather for the day"
                        Clicked="OnWeatherViewClicked"/>
                </VerticalStackLayout>
            </Frame>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NeuraDrive.MainPage">

    <!-- Only one child element is allowed directly under ContentPage, so wrap everything in a single layout -->
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label 
                Text="NeuraDrive"
                Style="{StaticResource SubHeadline}"/>

            <Label 
                HorizontalTextAlignment="Center"
                Text="Introducing NeuraDrive, the ultimate Formula 1 betting companion for fans who live for the thrill of the race. With a sleek interface and real-time race data, NeuraDrive lets you place smart, strategic bets on your favorite drivers, teams, and race outcomes — all in one place. Track live standings, compare driver stats, and analyze trends to make every prediction count. Whether you’re a casual viewer or a dedicated F1 strategist, NeuraDrive turns every Grand Prix into a high-octane experience where your knowledge meets opportunity. Get ready to race, bet, and win like a pro"/>

            <Frame x:Name="RaceSetUp">
                <VerticalStackLayout>

                    <Label 
                        HorizontalTextAlignment="Center"
                        x:Name="RaceSummaryLabel"
                        Text=""/>
                </VerticalStackLayout>

            </Frame>

            <Frame>
                <VerticalStackLayout>
                    <Button
                        x:Name="StartRaceButton"
                        Text="Start Race"
                        Clicked="OnStartRaceClicked"/>

                    <Button
                        x:Name="SeeRacersButton"
                        Text="Go to Racers"
                        Clicked="RacersPage"/>

                </VerticalStackLayout>
            </Frame>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
